<div class="container-sm">
  <div class="row">
    <div class="col caro">
      <div id="carouselExampleControls" class="carousel slide text-center mt-1" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag('2', height:"280", width:"260")  %>
          </div>
          <div class="carousel-item">
            <%= link_to (image_tag '3', height:"280", width:"260"), article_products_path(1)%>
          </div>
          <div class="carousel-item">
            <%= image_tag('4', height:"280", width:"260") %>
